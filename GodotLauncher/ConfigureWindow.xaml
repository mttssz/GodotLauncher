<Window x:Class="GodotLauncher.ConfigureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GodotLauncher"
        mc:Ignorable="d"
        Title="Configuration" Height="424" Width="610"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontSize="18">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock>Godot install location:</TextBlock>
            <DockPanel LastChildFill="True">
                <Button Name="BrowseFolderButton" Height="50" Width="50" HorizontalAlignment="Left" Margin="0,0,5,0" Click="BrowseFolderButton_Click">...</Button>
                <TextBox Name="GodotInstallLocationTextbox" Height="50" VerticalContentAlignment="Center" IsReadOnly="True" Foreground="DarkGray" Padding="10,0,0,0" Text="{Binding GodotInstallLocation, Mode=TwoWay}"></TextBox>
            </DockPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical" >
            <TextBlock>On Godot Launch:</TextBlock>
            <ComboBox Name="OnGodotLaunchComboBox" Height="50" VerticalContentAlignment="Center" SelectedIndex="{Binding OnGodotLaunchSelectedIndex, Mode=TwoWay}">
                <ComboBoxItem>Close GodotLauncher</ComboBoxItem>
                <ComboBoxItem>Minimize GodotLauncher</ComboBoxItem>
                <ComboBoxItem>Do nothing</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Vertical" VerticalAlignment="Bottom">
            <TextBlock>Proxy settings:</TextBlock>
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Vertical">
                    <TextBlock Name="ProxyUrlLabel" Foreground="{Binding ForegroundBrush, Mode=TwoWay}">URL:</TextBlock>
                    <TextBox Name="ProxyUrlTextBox" Height="50" Width="400" VerticalContentAlignment="Center" IsEnabled="{Binding IsProxyEnabled, Mode=OneWay}" Foreground="{Binding ForegroundBrush, Mode=TwoWay}"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Name="ProxyPortLabel" Margin="10,0,0,0" Foreground="{Binding ForegroundBrush, Mode=TwoWay}">Port:</TextBlock>
                    <TextBox Name="ProxyPortTextBox" Height="50" VerticalContentAlignment="Center" IsEnabled="{Binding IsProxyEnabled, Mode=OneWay}" Margin="10,0,0,0" Foreground="{Binding ForegroundBrush, Mode=TwoWay}"></TextBox>
                </StackPanel>
            </DockPanel>
            <CheckBox Name="UseProxyCheckBox" VerticalContentAlignment="Center" IsChecked="{Binding IsProxyEnabled, Mode=TwoWay}">Use proxy</CheckBox>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Name="ApplyButton" Width="125" Height="50" Margin="0,0,10,0" Click="ApplyButton_Click">Apply</Button>
            <Button Name="CancelButton" Width="125" Height="50" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
